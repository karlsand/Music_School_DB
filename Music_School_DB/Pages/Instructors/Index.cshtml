@page
@model Music_School_DB.Pages.InstructrosPage

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" asp-page-handler="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].InstrumentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].PhoneNr)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InstrumentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNr)
            </td>
            <td>
                <a asp-page="./Edit" asp-page-handler="Edit" asp-route-id="@item.ID">Edit</a> 
                <a asp-page="./Details" asp-page-handler="Details" asp-route-id="@item.ID">Details</a> 
                <a asp-page="./Delete" asp-page-handler="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
